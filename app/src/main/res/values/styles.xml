<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogoImage_Port">
        <item name="android:layout_width">@dimen/logo_img_width_port</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/logo_img_padding_left</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AddressText_Port">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_address_padding_top</item>
        <item name="android:paddingLeft">@dimen/text_address_padding_left</item>
        <item name="android:textSize">@dimen/text_address_port</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:autoLink">web|phone|map</item>
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
    </style>

    <style name="SloganText_Port">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/slogan_text_padding_left</item>
        <item name="android:textSize">@dimen/slogan_text_port</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogoImage_Land">
        <item name="android:layout_width">@dimen/logo_img_width_land</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/logo_img_padding_left</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AddressText_Land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_address_padding_top</item>
        <item name="android:paddingLeft">@dimen/text_address_padding_left</item>
        <item name="android:textSize">@dimen/text_address_land</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:autoLink">web|phone|map</item>
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
    </style>

    <style name="SloganText_Land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/slogan_text_padding_left</item>
        <item name="android:textSize">@dimen/slogan_text_land</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>



















</resources>
